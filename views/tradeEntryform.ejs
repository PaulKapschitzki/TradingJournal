<%- include('partials/_header') %>
<div>
    <header class="container">
        <h1>Enter a new trade</h1>
    </header>
    <main>
        <!-- form for entering parameters of current trade -->
        <section id="tradeEntry" class="container">
            <!-- <p>### Section "tradeEntry" ###</p> -->
            <!-- using method="POST" to enter data into database -->
            <form action="/api/trades/create" method="POST">
                <div class="form-group row">               
                    <div class="input-group mb-3 col">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Symbole</span>
                        </div>
                        <input name="symbole" placeholder="e.g. EURUSD" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                    </div>
                    <div class="input-group mb-3 col">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="numberOfPositions">Number of Positions</label>
                        </div>
                        <select class="custom-select" id="numberOfPositions" name="name">
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <div class="input-group mb-3 col">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="direction">Buy or Sell</label>
                        </div>
                        <select class="custom-select" id="direction" name="direction">
                            <option value="Buy">Buy</option>
                            <option value="Sell">Sell</option>
                        </select>
                    </div>
                    <div class="input-group mb-3 col">
                        <div class="input-group-text">
                            <span class="input-group-prepend" id="inputGroup-sizing-default">Volume</span>
                        </div>
                        <input name="volume" step="0.01" value="0.1" type="number" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <div class="input-group mb-3 col">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="type">Order Type</label>
                        </div>
                        <select class="custom-select" id="type" name="type">
                            <option value="Pending Order">Pending Order</option>
                            <option value="Market Order">Market Order</option>
                        </select>
                    </div>
                    <div class="input-group mb-3 col"> <!-- Has to vanish if order type is not "Pending Order"-->
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="pendingOrderType">Pending Order Type</label>
                        </div>
                        <select class="custom-select" id="pendingOrderType" name="pendingOrderType">
                            <option value="Buy Limit">Buy Limit</option>
                            <option value="Buy Stop">Buy Stop</option>
                            <option value="Sell Limit">Buy Limit</option>
                            <option value="Sell Stop">Buy Stop</option>
                        </select>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <div class="input-group mb-3 col">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="setup">Trade Setup</label>
                        </div>
                        <select class="custom-select" id="setup" name="setup">
                            <option value="Pinbar">Pinbar</option>
                            <option value="2 Bar Reversal">2 Bar Reversal</option>
                            <option value="3 Bar Reversal">3 Bar Reversal</option>
                            <option value="BUEB">BUEB</option>
                            <option value="BEEB">BEEB</option>
                            <option value="COIB">COIB</option>
                            <option value="Breakout">Breakout</option>
                            <option value="Limit Buy">Limit Buy</option>
                            <option value="Limit Sell">Limit Sell</option>
                        </select>
                    </div>
                    <div class="input-group mb-3 col"> <!-- Should be saved as cookie or cached somehow-->
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="timeframe">Timeframe</label>
                        </div>
                        <select class="custom-select" id="timeframe" name="timeframe">
                            <option value="M1">M1</option>
                            <option value="M5">M5</option>
                            <option value="M15">M15</option>
                            <option value="M30">M30</option>
                            <option value="H1">H1</option>
                            <option value="H4">H4</option>
                            <option value="D1">D1</option>
                            <option value="W1">W1</option>
                            <option value="MN">MN</option>
                        </select>
                    </div>
                </div>
                <hr>
                <div class="container">
                    <div class="form-group row">
                        <div class="input-group mb-3">
                            <div class="input-group-text">
                                <span class="input-group-prepend" id="inputGroup-sizing-default">Entry Price</span>
                            </div>
                            <input name="entryPrice" step="0.01" value="1.00000" min="0.00000" max="10000.00000" step="0.00001" type="number" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-text">
                                <span class="input-group-prepend" id="inputGroup-sizing-default">Stop Loss</span>
                            </div>
                            <input name="stopLoss" step="0.01" value="1.00000" min="0.00000" max="10000.00000" step="0.00001" type="number" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-text">
                                <span class="input-group-prepend" id="inputGroup-sizing-default">Take Profit</span>
                            </div>
                            <input name="takeProfit" step="0.01" value="1.00000" min="0.00000" max="10000.00000" step="0.00001"type="number" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                        </div>
                    </div>
                </div>
                <hr>
<!--                 
                <div class="form-group col">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Entry Date</label>
                        <input class="col-sm-5 form-control" type="date" name="entryDate">
                    </div>
                </div> -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="accordingToPlan">Trade accroding to plan?</label>
                    </div>
                    <select class="custom-select" id="accordingToPlan" name="accordingToPlan">
                        <option selected>Choose...</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <!-- Comments textarea -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">Comments on Entry</span>
                        </div>
                        <textarea name="commentsEntry" class="form-control" aria-label="commentsEntry"></textarea>
                      </div>
                </div>
                <!-- File Upload for screenshots -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="imageEntry">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file ...</label>
                    </div>
                </div>
                <!-- Buttons -->
                <div class="form-group col text-center">
                    <button class="btn btn-success" id="submitTrade" type="submit">Submit</button>
                    <button class="btn btn-secondary" id="cancelTradeEntry">Cancel</button>
                </div>
                <br>
            </form>
        </section>
    </main>
    <footer>
        <p>### Footer ###</p>
    </footer>
</div>
<!-- After making public/app.js public with middleware express.static -->
<script type="text/javascript" src="../../tradeEntryForm.js"></script>
<%- include('partials/_footer') %>